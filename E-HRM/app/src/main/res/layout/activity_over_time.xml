<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/ConstraintLayout" android:background="#E2D4B7">
    <TextView
            android:text="OVERTIME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:textSize="34sp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.045" android:fontFamily="serif"
            app:layout_constraintHorizontal_bias="0.564" android:textStyle="bold"/>
    <Button
            android:text="ADD"
            android:layout_width="150dp"
            android:layout_height="70dp" android:id="@+id/btnAdd"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.938"
            app:layout_constraintVertical_bias="0.915" android:textSize="24sp" android:onClick="click"
            android:backgroundTint="#9C9583"/>
    <EditText
            android:layout_width="234dp"
            android:layout_height="79dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editTextDate"
            android:hint="dd/mm/yyyy" android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            android:onClick="choose"
            android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.865" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.519"/>
    <EditText
            android:layout_width="218dp"
            android:layout_height="61dp"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/editTextTime"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.703"
            android:hint="eg; 4.5" android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/textView5" android:onClick="time" android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.674"/>
<!--    <EditText-->
<!--            android:layout_width="218dp"-->
<!--            android:layout_height="61dp"-->
<!--            android:inputType="number"-->
<!--            android:ems="10"-->
<!--            android:id="@+id/txtMonth"-->
<!--            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"-->
