<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Profile" android:orientation="vertical" android:backgroundTint="#E2D4B7"
        android:background="#E2D4B7">

    <TextView
            android:text="PROFILE SUMMARY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView16" android:textSize="22sp"
            android:fontFamily="serif" android:textAlignment="center" android:textStyle="bold"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="68dp" app:srcCompat="@drawable/profile_man" android:id="@+id/imageView2"
            android:layout_marginTop="10dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="493dp">
        <TextView
                android:text="Name : "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView" android:textSize="20sp"
                android:layout_marginStart="0dp" android:textAlignment="center" android:layout_marginTop="15dp"
                android:textStyle="bold"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp" android:id="@+id/lblName" android:textSize="22sp"
                android:textAlignment="center" android:fontFamily="sans-serif"/>
        <TextView
                android:text="ID no. :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2" android:textSize="20sp"
                android:layout_marginStart="0dp" android:textAlignment="center" android:textStyle="bold"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp" android:id="@+id/lblID" android:textSize="22sp"
                android:textAlignment="center" android:fontFamily="sans-serif"/>
        <TextView
                android:text="Email Address :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView3" android:textSize="20sp"
                android:layout_marginStart="0dp" android:textAlignment="center" android:textStyle="bold"
                android:textColorHint="@color/black"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="43dp" android:id="@+id/lblEmel" android:textSize="22sp"
                android:textAlignment="center" android:fontFamily="sans-serif"/>
        <TextView
                android:text="Phone No. :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView4" android:textSize="20sp"
                android:layout_marginStart="0dp" android:textAlignment="center" android:textStyle="bold"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp" android:id="@+id/lblPhone" android:textSize="22sp"
                android:textAlignment="center" android:fontFamily="sans-serif"/>
        <TextView
                android:text="Address :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView5" android:textSize="20sp"
                android:layout_marginStart="0dp" android:textAlignment="center" android:textStyle="bold"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="41dp" android:id="@+id/lblAddr" android:textAlignment="center"
                android:textSize="22sp"/>
        <TextView
                android:text="Position :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView6" android:textSize="20sp"
                android:layout_marginStart="0dp" android:textAlignment="center" android:textStyle="bold"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp" android:id="@+id/lblPosition" android:textSize="22sp"
                android:textAlignment="center" android:fontFamily="sans-serif"/>
        <TextView
                android:text="Performance :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView7" android:textSize="20sp"
                android:layout_marginStart="0dp" android:textAlignment="center" android:textStyle="bold"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp" android:id="@+id/lblPerform" android:textSize="22sp"
                android:textAlignment="center" android:fontFamily="sans-serif"/>
    </LinearLayout>
    <Button
            android:text="Back"
            android:layout_width="117dp"
            android:layout_height="51dp" android:id="@+id/btnBackProfile" android:layout_marginLeft="145dp"
            android:backgroundTint="#9C9583" android:textSize="24sp" android:onClick="back"/>
</LinearLayout>