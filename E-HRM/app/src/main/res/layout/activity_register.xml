<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:backgroundTint="#E2D4B7" android:background="#E2D4B7"
        android:id="@+id/linearLayout" android:orientation="vertical" android:onClick="save">
    <TextView
            android:text="REGISTER YOUR ACCOUNT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView8" android:textSize="22sp"
            android:textAlignment="center" android:fontFamily="serif" android:padding="10dp" android:paddingTop="15dp"
            android:layout_marginTop="10dp"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="72dp" app:srcCompat="@drawable/profile_man" android:id="@+id/imageView"
            android:baselineAlignBottom="true" android:adjustViewBounds="false"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtfname" android:textSize="20sp" android:hint="First Name "/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtlname" android:textSize="20sp" android:hint="Last Name"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number|textPersonName"
            android:ems="10"
            android:id="@+id/txtid" android:textSize="20sp" android:hint="ID no."/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txtemel" android:textSize="20sp" android:hint="Email Address"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtPassword" android:hint="Password" android:textSize="20sp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/txtphone" android:textSize="20sp" android:hint="Phone No."/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/txtaddress" android:textSize="20sp" android:hint="Address"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtposition" android:textSize="20sp" android:hint="Position"/>
    <Button
            android:text="Create"
            android:layout_width="123dp"
            android:layout_height="55dp" android:id="@+id/btnSave" android:onClick="save" android:textSize="24dp"
            android:textColorHint="#9B9482" android:textColorLink="#9B9482" android:textColor="#000000"
            android:textColorHighlight="#9B9482" android:backgroundTint="#9C9583" android:layout_marginLeft="135dp"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="Successfully created!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txtStatus" android:visibility="invisible"
            android:textAlignment="center" android:layout_marginRight="15dp"/>
    <Button
            android:text="BACK"
            android:layout_width="123dp"
            android:layout_height="55dp" android:id="@+id/btnBack" android:layout_marginLeft="135dp"
            android:onClick="back" android:backgroundTint="#9C9583" android:textSize="24dp"/>
</LinearLayout>