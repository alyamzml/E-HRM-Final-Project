<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Payroll_Main" android:background="#E2D4B7">

    <TextView
            android:text="PAYROLL"
            android:layout_width="185dp"
            android:layout_height="45dp" android:id="@+id/textView"
            android:textSize="34sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.539"
            android:textColorLink="@color/teal_700" android:textColor="#685858" android:fontFamily="serif"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.042" android:textStyle="bold"/>
    <Button
            android:text="BACK"
            android:layout_width="133dp"
            android:layout_height="60dp" android:id="@+id/button4"
            android:onClick="Back" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.766"
            app:layout_constraintVertical_bias="0.828" android:backgroundTint="#9C9583" android:textSize="24sp"/>
    <TextView
            android:text="Total Deduct :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.181"
            app:layout_constraintVertical_bias="0.535" android:textStyle="bold" android:fontFamily="serif"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView10"
            android:textSize="24sp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.76"
            app:layout_constraintVertical_bias="0.65" android:text="RM"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView9"
            android:textSize="24sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.76"
            app:layout_constraintVertical_bias="0.536" android:text="RM"/>
    <TextView
            android:text="Total Payroll:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.65" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.173"
            android:textStyle="bold" android:fontFamily="serif"/>
    <TextView
            android:text="Total Income :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:textSize="24sp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.168"
            app:layout_constraintVertical_bias="0.415" android:textStyle="bold" android:fontFamily="serif"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView8"
            android:textSize="24sp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/button4" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintVertical_bias="0.494" android:text="RM"
            app:layout_constraintStart_toEndOf="@+id/textView2"/>
    <Button
            android:text="Display"
            android:layout_width="132dp"
            android:layout_height="61dp" android:id="@+id/btnDisplay"
            android:onClick="onClick" app:layout_constraintEnd_toStartOf="@+id/button4"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.829" android:backgroundTint="#9C9583" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.407"/>
    <ImageView
            android:layout_width="120dp"
            android:layout_height="104dp" app:srcCompat="@drawable/salary__1_" android:id="@+id/imageView9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="420dp"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.565"/>


</androidx.constraintlayout.widget.ConstraintLayout>