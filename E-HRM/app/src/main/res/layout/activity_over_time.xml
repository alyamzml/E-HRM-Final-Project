<!--            android:textAlignment="center"-->
<!--            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.38"-->
<!--            app:layout_constraintStart_toEndOf="@+id/textView12"/>-->
    <TextView
            android:text="HOURS: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.122"
            android:textStyle="bold" android:fontFamily="serif" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.67"/>
    <TextView
            android:text="DATE: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.138"
            app:layout_constraintVertical_bias="0.476" app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold" android:fontFamily="serif" android:layout_marginTop="50dp"/>
    <Button
            android:text="BACK"
            android:layout_width="167dp"
            android:layout_height="74dp" android:id="@+id/btnBack"
            android:textSize="24sp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintVertical_bias="0.92" app:layout_constraintEnd_toStartOf="@+id/btnAdd"
            android:onClick="back" android:backgroundTint="#9C9583"/>
    <ImageView
            android:layout_width="120dp"
            android:layout_height="110dp" app:srcCompat="@drawable/clock" android:id="@+id/imageView3"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.237" app:layout_constraintVertical_bias="0.164"
            android:layout_marginLeft="110dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>